<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000">

    <View
        android:id="@+id/v"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:tag="holder"
        tools:background="#f00"
        tools:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="40dp"
        tools:layout_marginTop="350dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ok"
        app:layout_constraintBottom_toBottomOf="@id/v"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="@id/v"
        app:layout_constraintRight_toRightOf="@id/v"
        app:layout_constraintTop_toTopOf="@id/v"
        app:layout_constraintVertical_bias="0.69" />

</androidx.constraintlayout.widget.ConstraintLayout>